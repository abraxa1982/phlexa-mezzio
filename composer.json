{
  "name": "phoice/phlexa-expressive",
  "description": "Build voice applications for Amazon Alexa with phlexa, PHP and Zend\\Expressive",
  "license": "MIT",
  "type": "library",
  "homepage": "https://www.phoice.tech/",
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.1",
    "fig/http-message-util": "^1.1",
    "http-interop/http-middleware": "^0.4.1",
    "psr/http-message": "^1.0",
    "phoice/phlexa": "dev-master",
    "zendframework/zend-expressive-router": "^2.1",
    "zendframework/zend-expressive-template": "^1.0",
    "zendframework/zend-servicemanager": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "PhlexaExpressive\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhlexaExpressiveTest\\": "test/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs src/",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-html html/coverage/"
  }
}
